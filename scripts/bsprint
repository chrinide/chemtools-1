
from __future__ import print_function

from argparse import ArgumentParser
from chemtools.basisset import BasisSet
from collections import OrderedDict

def main():

    parser = ArgumentParser()
    parser.add_argument("file", help=".bas file with a BasisSet object")
    parser.add_argument("-f", "--format", choices=["gamess", "molpro", "dalton", "nwchem", "cfour"], default="gamess")
    args = parser.parse_args()

    writer = "write_" + args.format
    bs = BasisSet.from_dict(eval(open(args.file, "rb").read()))
    method = getattr(bs, writer)

    print(method())

if __name__ == "__main__":
    main()
